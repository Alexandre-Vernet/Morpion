<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UnJoueurActivity">

    <!--    Mode de jeu-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 joueur"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomJoueur1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!--    Affichage des scores-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/scoreJ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joueur1"
                android:textColor="@color/joueur1"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="30sp" />

            <TextView
                android:id="@+id/scoreJ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joueur2"
                android:textColor="@color/joueur2"
                android:textSize="30sp" />
        </LinearLayout>


        <!--    Zone de jeu-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/btn0"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/btn1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/btn4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/btn5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/btn7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/btn8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#dadada"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:textSize="90sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>